                    android:layout_marginTop="4dp"
                    android:text="Split"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

            </LinearLayout>

            <!-- Speed -->
            <LinearLayout
                android:id="@+id/btnSpeed"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Speed"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

            </LinearLayout>

            <!-- Filters -->
            <LinearLayout
                android:id="@+id/btnFilters"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¨"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Filters"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

            </LinearLayout>

            <!-- Text -->
            <LinearLayout
                android:id="@+id/btnText"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Text"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

            </LinearLayout>

            <!-- Stickers -->
            <LinearLayout
                android:id="@+id/btnStickers"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜€"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Stickers"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

            </LinearLayout>

            <!-- Audio -->
            <LinearLayout
                android:id="@+id/btnAudio"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽµ"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Audio"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

            </LinearLayout>

            <!-- Background -->
            <LinearLayout
                android:id="@+id/btnBackground"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ­"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="BG Remove"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

            </LinearLayout>

            <!-- Transition -->
            <LinearLayout
                android:id="@+id/btnTransition"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
